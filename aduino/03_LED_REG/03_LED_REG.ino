void setup() {
  // setup() 함수는 프로그램이 시작될 때 한 번만 실행됩니다.
  // 이 함수에서 핀 모드나 초기 설정을 합니다.

  // 포트 D의 2번 핀(PD2)을 출력 모드로 설정합니다.
  // DDRD는 데이터 방향 레지스터로, 각 비트는 포트 D의 핀 방향을 설정합니다.
  // 0x04는 2진수 00000100으로, PD2 핀을 출력으로 설정하고 나머지 핀은 입력으로 설정합니다.
  DDRD = 0x04;
}

void loop() {
  // loop() 함수는 setup() 함수가 실행된 후 반복적으로 실행됩니다.
  // 이 함수에서 주로 메인 로직을 작성합니다.

  // 포트 D의 2번 핀(PD2)을 HIGH 상태로 설정하여 전압을 공급합니다.
  // PORTD는 포트 D의 핀 상태를 설정합니다.
  // 0x04는 2진수 00000100으로, PD2 핀만 HIGH 상태로 만들고 나머지 핀은 LOW 상태로 만듭니다.
  PORTD = 0x04;

  // 100 밀리초 동안 지연시킵니다.
  // 이 동안 PD2 핀은 HIGH 상태를 유지합니다.
  delay(100);

  // 포트 D의 2번 핀(PD2)을 LOW 상태로 설정하여 전압을 차단합니다.
  // 0x00은 모든 핀을 LOW 상태로 만듭니다.
  PORTD = 0x00;

  // 100 밀리초 동안 지연시킵니다.
  // 이 동안 PD2 핀은 LOW 상태를 유지합니다.
  delay(100);
}